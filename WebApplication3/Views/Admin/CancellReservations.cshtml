@model IEnumerable<ReservationSystem.Reservation.EditReservationView>

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Seznam rezervací</h2>


<table class="table table-striped table-hover ">
    <tr>
        <th>
            Datum
        </th>
        <th>
            Čas
        </th>
        <th>
            Stůl
        </th>
        <th>
            Jméno
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.SDate
        </td>
        <td>
            @item.Time
        </td>
        <td>
            @item.Table
        </td>
        <td>
            @item.Name
        </td>
        <td>
            @Html.ActionLink("Smazat", "Delete","Admin", new { id=item.Id }, new { id = item.Id })
        </td>
    </tr>
}

</table>
